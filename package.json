{
    "name": "skupper-web-console",
    "description": "Skupper Web Console",
    "license": "Apache-2.0",
    "private": true,
    "engines": {
        "npm": "please-use-yarn",
        "yarn": ">= 1.19.1"
    },
    "scripts": {
        "start": "webpack serve --config config/webpack.dev.js",
        "build": "webpack --config config/webpack.prod.js",
        "test": "jest --config config/jest.config.js",
        "cy:open": "cypress open",
        "cy:run": "cypress run",
        "ci": "start-test 3000 cy:run",
        "lint": "eslint src --ext .ts,.tsx --cache",
        "lint-fix": "npm run lint --fix",
        "prettier-all": "prettier --write '**/*.{js,ts,tsx,html,scss}'",
        "bundle-report": "STATS=server npm run build",
        "find-dead-code": "ts-prune",
        "prepare": "husky install",
        "commit": "git-cz"
    },
    "dependencies": {
        "@patternfly/patternfly": "^4.221.2",
        "@patternfly/react-charts": "^6.94.12",
        "@patternfly/react-core": "^4.264.0",
        "@patternfly/react-icons": "^4.93.0",
        "@patternfly/react-table": "^4.111.45",
        "@patternfly/react-topology": "^4.90.23",
        "@tanstack/react-query": "^4.19.1",
        "axios": "^1.2.1",
        "d3-drag": "^3.0.0",
        "d3-fetch": "^3.0.1",
        "d3-force": "^3.0.0",
        "d3-interpolate": "^3.0.1",
        "d3-polygon": "^3.0.1",
        "d3-scale": "^4.0.2",
        "d3-selection": "^3.0.0",
        "d3-shape": "^3.1.0",
        "d3-zoom": "^3.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.4.5"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.2.0",
        "@commitlint/config-conventional": "^17.2.0",
        "@commitlint/cz-commitlint": "^17.2.0",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/d3-drag": "^3.0.1",
        "@types/d3-force": "^3.0.3",
        "@types/d3-selection": "^3.0.3",
        "@types/d3-transition": "^3.0.2",
        "@types/d3-zoom": "^3.0.1",
        "@typescript-eslint/eslint-plugin": "^5.46.1",
        "@typescript-eslint/parser": "^5.46.1",
        "circular-dependency-plugin": "^5.2.2",
        "commitizen": "^4.2.5",
        "css-loader": "^6.7.2",
        "cypress": "^12.1.0",
        "eslint": "^8.29.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-import-resolver-typescript": "^3.5.2",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jest": "^27.1.6",
        "eslint-plugin-react": "^7.31.11",
        "eslint-plugin-react-hooks": "^4.6.0",
        "fork-ts-checker-webpack-plugin": "^7.2.13",
        "html-webpack-plugin": "^5.5.0",
        "husky": "^8.0.2",
        "inquirer": "8",
        "jest": "^29.3.1",
        "jest-environment-jsdom": "^29.3.1",
        "miragejs": "^0.1.46",
        "prettier": "^2.8.1",
        "start-server-and-test": "^1.15.2",
        "style-loader": "^3.3.1",
        "ts-jest": "^29.0.3",
        "ts-loader": "^9.4.2",
        "ts-node": "^10.9.1",
        "ts-prune": "^0.10.3",
        "tsconfig-paths-webpack-plugin": "^4.0.0",
        "typescript": "^4.9.4",
        "webpack": "^5.75.0",
        "webpack-bundle-analyzer": "^4.7.0",
        "webpack-cli": "^5.0.1",
        "webpack-dev-server": "^4.11.1",
        "webpack-merge": "^5.8.0"
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
